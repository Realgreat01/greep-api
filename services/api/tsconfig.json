{
	"compilerOptions": {
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"removeComments": false,
		"noImplicitAny": false,
		"target": "ESNext",
		"module": "commonjs",
		"rootDir": "src",
		"baseUrl": "./",
		"outDir": "lib",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"lib": ["ESNext"],
		"esModuleInterop": true,
		"allowJs": false,
		"sourceMap": false,
		"strict": true,
		"noEmit": false,
		"experimentalDecorators": true,
		"paths": {
			"@application/*": ["./src/application/*"],
			"@modules/*": ["./src/modules/*"],
			"@utils/*": ["./src/utils/*"],
		},
		"types": ["@types/node"],
	},
	"include": ["src"],
	"exclude": ["node_modules", "lib"],
}
